<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">
<!--    android:background="@drawable/img"-->


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="347dp"
        android:layout_height="300dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="356dp"
            android:layout_height="354dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_left_panel"
            android:padding="15dp">


            <Button
                android:id="@+id/viewVcSchedule"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="View Schedule"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/holo_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingForm" />

            <Button
                android:id="@+id/About"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="About"
                android:textColor="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="30dp" />

            <Button
                android:id="@+id/bookingForm"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Book appointment"
                android:textColor="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/About" />

            <Button
                android:id="@+id/Tuesday"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Tuesday"
                android:textColor="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/viewVcSchedule"
                tools:layout_editor_absoluteX="50dp" />

            <Button
                android:id="@+id/Wednesday"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Tuesday"

                app:layout_constraintTop_toBottomOf="@+id/Tuesday"
                tools:layout_editor_absoluteX="15dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewUserNamePass"
        android:layout_width="166dp"
        android:layout_height="26dp"
        android:text="User Name"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/textViewEmailPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="User Email"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserNamePass"
        tools:layout_editor_absoluteX="124dp" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailPass"
        tools:layout_editor_absoluteX="152dp" />
</androidx.constraintlayout.widget.ConstraintLayout>