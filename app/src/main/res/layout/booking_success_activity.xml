<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingSuccessActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_centerInParent="true"
      android:gravity="center_horizontal"
      >

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="211dp"
      android:layout_height="173dp"
      android:layout_marginTop="15dp"
      android:cropToPadding="false"
      android:scaleType="centerCrop"
      android:src="@drawable/success_booking" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking successful"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tvBookingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Date: "
        android:textColor="@color/green"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
          android:id="@+id/btnOk"
          android:layout_width="274dp"
          android:layout_height="67dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/shape_success_button"
          android:padding="5dp"
          android:text="Ok"
          android:textAllCaps="false"
          android:textColor="@android:color/white"
          android:textSize="40sp"
          android:gravity="center_vertical|center_horizontal"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/imageView"/>

    <TextView
        android:id="@+id/tvBookingInfo"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="View Booking Info >> "
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="@color/green"
      />

  </LinearLayout>
    </RelativeLayout>