<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/txtPerfectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="double click to pick perfect time for the user!" />

    <EditText
        android:id="@+id/perfectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPerfectTime"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="pickTime"
        android:inputType="time" />

    <Button
        android:id="@+id/saveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfectTime"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Save" />

    <Button
        android:id="@+id/cancelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfectTime"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/saveTime"
        android:text="Cancel" />


</RelativeLayout>